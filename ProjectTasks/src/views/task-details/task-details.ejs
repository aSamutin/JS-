<div class="detail-ticket">
  <div class="welcome">
    <span>Здравствуйте, <i><%=user%></i></span>
    <input type="submit" value="Выйти" id="exit">
  </div>
  <input type="submit" value="Назначить исполнителя" id="openSelectExecutor">
  <input type="submit" value="Изменить заявку" id="openEditTicket">
  <table>
    <caption><h2>Заявка № <span><%=ticket.id%></span></h2></caption>
    <thead>
    <tr>
        <th>Клиент</th>
        <th>Исполнитель</th>
        <th>Приоритет</th>
        <th>Estimated</th>
        <th>Deadline</th>
        <th>Готовность (%)</th>
        <th>Статус</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>
          <%=ticket.clientId%>
        </td>
        <td>
          <%=ticket.executorId%>
        </td>
        <td>
          <%=ticket.priority%>
        </td>
        <td>
          <%=ticket.estimated%>
        </td>
        <td>
          <%=ticket.deadline%>
        </td>
        <td>
          <%=ticket.percentReady%>
        </td>
        <td>
          <%=ticket.status%>
        </td>
      </tr>
    </tbody>
    </table>
    <div class="description">
      <h2>Описание</h2>
      <%=ticket.description%>
    </div>
    <div class="comments">
      <h2>Комментарии</h2>
      <% for( var i = comment.length-1; i >= 0  ; i--) {%>
        <div class="comment">
            <h3><%=comment[i].userId%></h3>
            <div><%=comment[i].text%></div>
        </div>
      <% }; %>
    </div>
    <input type="submit" value="Добавить комментарий" id="openCreateComment">
</div>
